generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // for local development
  url      = env("DATABASE_URL")
  // for Vercel
  // url       = env("POSTGRES_PRISMA_URL")
  // directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum Role {
  USER
  ADMIN
}

model User {
  id       Int    @id @default(autoincrement())
  name     String @default("User")
  email    String @unique
  password String
  role     Role   @default(USER)
}

model Bird {
  id            Int       @id @default(autoincrement())
  imagepath     String?
  name          String
  sciname       String
  description   String
}

model Sighting {
  id            Int       @id @default(autoincrement())
  imagepath     String?
  name          String
  sciname       String
  time          String
  userid        Int
  description   String
}

model Comment {
  id        Int      @id @default(autoincrement())
  note      String
  owner     String
  createdAt DateTime @default(now())
}